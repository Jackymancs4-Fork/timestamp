{
  "private": true,
  "scripts": {
    "start": "npm run build && electron ./app --enable-logging",
    "sass": "node-sass ./app/stylesheets/styles.scss ./app/styles.css",
    "build": "npm run sass",
    "pack": "npm install && npm run build && build --dir",
    "dist": "npm install && npm run build && build",
    "postinstall": "install-app-deps"
  },
  "dependencies": {
    "auto-launch": "^3.0.0",
    "got": "^6.3.0",
    "moment": "^2.14.1",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^1.3.3",
    "electron-builder": "^5.26.0"
  },
  "build": {
    "appId": "com.electron.timestamp",
    "category": "public.app-category.utilities",
    "mac": {
      "icon": "resources/osx/icon.icns"
    },
    "dmg": {
      "icon": "resources/osx/dmg-icon.icns",
      "background": "resources/osx/dmg-background.png"
    }
  }
}
