{
  "name": "timestamp",
  "version": "1.0.0",
  "productName": "Timestamp",
  "description": "A better macOS menu bar clock with a customizable date/time display and a calendar.",
  "author": "Sebastian Prein <hi@sebastianprein.com>",
  "main": "src/App.js",
  "scripts": {
    "start": "electron . --enable-logging",
    "sass": "node-sass --watch --recursive --output src/Views --source-map true --source-map-contents src/Views",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mzdr/timestamp.git"
  },
  "keywords": [
    "macos",
    "clock",
    "calendar"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mzdr/timestamp/issues"
  },
  "homepage": "https://github.com/mzdr/timestamp#readme",
  "devDependencies": {
    "auto-launch": "^2.1.0",
    "electron-builder": "^5.22.2",
    "electron-prebuilt": "1.3.2",
    "moment": "^2.14.1",
    "normalize.css": "^4.2.0",
    "pikaday": "^1.4.0"
  },
  "build": {
    "appId": "com.example.electron-boilerplate",
    "app-category-type": "public.app-category.utilities",
    "mac": {
      "icon": "resources/osx/icon.icns"
    },
    "dmg": {
      "icon": "resources/osx/dmg-icon.icns",
      "background": "resources/osx/dmg-background.png"
    }
  },
  "directories": {
    "buildResources": "resources",
    "app": "src"
  }
}
